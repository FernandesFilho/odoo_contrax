<?xml version="1.0" encoding="utf-8"?>
    <openerp>
       <data noupdate="0">
           <!-- Creating a Group Category -->        
           <record id="agenda_tecnicos" model="ir.module.category">
               <field name="name">Agenda dos Técnicos</field>
               <field name="sequence">1</field>
           </record>
           <!-- Adding a Group to the Group Category -->
           <record id="agenda_tecnicos.manager" model="res.groups">
               <field name="name">Administrador</field>
               <field name="category_id" ref="agenda_tecnicos"/>
           </record>
           <!-- Adding a Group to the Group Category -->
           <record id="agenda_tecnicos.user" model="res.groups">
               <field name="name">Usuário</field>
               <field name="category_id" ref="agenda_tecnicos"/>
           </record>
        </data>
    </openerp>